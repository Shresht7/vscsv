{
  "name": "vscsv",
  "displayName": "vscsv",
  "description": "VS Code extension for CSV/TSV language support",
  "author": "Shresht7",
  "publisher": "Shresht7",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "csv",
        "aliases": [
          "CSV"
        ],
        "extensions": [
          ".csv"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "tsv",
        "aliases": [
          "TSV"
        ],
        "extensions": [
          ".tsv"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "vscsv.showPreview",
        "title": "Show Table Preview",
        "category": "VSCSV",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscsv.showPreview",
          "when": "editorLangId == csv || editorLangId == tsv",
          "group": "VSCSV"
        }
      ],
      "editor/title": [
        {
          "command": "vscsv.showPreview",
          "when": "editorLangId == csv || editorLangId == tsv",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "VSCSV",
      "properties": {
        "vscsv.enableSyntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable syntax highlighting for columns in csv/tsv files"
        },
        "vscsv.enableDocumentSymbols": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable document symbols in csv/tsv files"
        },
        "vscsv.enableHoverInformation": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable hover information in csv/tsv files"
        },
        "vscsv.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable diagnostics for csv/tsv files"
        }
      }
    },
    "configurationDefaults": {
      "[tsv]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "NODE_ENV=production node ./esbuild.mjs",
    "compile": "node ./esbuild.mjs",
    "watch": "node ./esbuild.mjs",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "test-web": "vscode-test-web"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.3.1",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.73",
    "eslint": "^8.57.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "esbuild": "^0.25.9",
    "fuse.js": "^7.1.0"
  }
}
